
set(CPACK_PACKAGE_NAME "realsense-sdk${SDK_VERSION_MAJOR}${PLATFORM}")

set(CPACK_DEBIAN_PACKAGE_DESCRIPTION "Intel Linux RealSense SDK Runtime Package")

#installation scripts
set(CPACK_DEBIAN_PACKAGE_CONTROL_EXTRA "${CMAKE_CURRENT_SOURCE_DIR}/debian/preinst;${CMAKE_CURRENT_SOURCE_DIR}/debian/postinst;${CMAKE_CURRENT_SOURCE_DIR}/debian/postrm" 
)

CONFIGURE_FILE(
  "${CMAKE_CURRENT_SOURCE_DIR}/debian/pkg-config.pc.cmake"
  "${CMAKE_CURRENT_BINARY_DIR}/${CPACK_PACKAGE_NAME}.pc"
)

install(
	FILES ${CMAKE_CURRENT_BINARY_DIR}/${CPACK_PACKAGE_NAME}.pc 
	DESTINATION lib/pkgconfig 
	COMPONENT pkgconfig
)

#package content
set(CPACK_INSTALL_CMAKE_PROJECTS)
list(APPEND CPACK_INSTALL_CMAKE_PROJECTS "${CMAKE_CURRENT_BINARY_DIR};realsense_sdk;so_libraries;/")
list(APPEND CPACK_INSTALL_CMAKE_PROJECTS "${CMAKE_CURRENT_BINARY_DIR};realsense_sdk;pkgconfig;/")

